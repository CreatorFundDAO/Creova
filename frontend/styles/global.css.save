@tailwind base;
@tailwind components;
@tailwind utilities;

/* Global Styles */
body {
  @apply bg-gray-900 text-white;
  font-family: 'Inter', sans-serif;
}

/* Hero Gradient */
.hero-gradient {
  background: linear-gradient(135deg, #00FF85, #008F5A);
}

/* Sticky Navbar */
.sticky-header {
  position: fixed;
  top: 0;
  width: 100%;
  background: rgba(10, 10, 10, 0.95);
  backdrop-filter: blur(10px);
  z-index: 1000;
  box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease-in-out;
}

/* Buttons */
.btn-primary {
  background: linear-gradient(90deg, #00c853, #e0f7fa);
  color: white;
  padding: 12px 25px;
  border-radius: 8px;
  font-size: 16px;
  cursor: pointer;
  transition: background 0.3s;
}

.btn-primary:hover {
  background: linear-gradient(90deg, #00a845, #b2ebf2);
}

/* Section Spacing */
.section {
  padding: 80px 10%;
  text-align: center;
}

/* Footer */
.footer {
  background: #141414;
  padding: 20px 0;
  text-align: center;
}/* Import Google Fonts */
@import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600&display=swap');

/* Global Styles */
body {
    font-family: 'Inter', sans-serif;
    margin: 0;
    padding: 0;
    background-color: #0D0D0D;
    color: #ffffff;
}

/* Navbar */
.navbar {
    position: fixed;
    top: 0;
    width: 100%;
    background: rgba(20, 20, 20, 0.9);
    backdrop-filter: blur(10px);
    padding: 10px 0;
    display: flex;
    justify-content: center;
    z-index: 1000;
    transition: background 0.3s;
}

.navbar .container {
    width: 90%;
    display: flex;
    align-items: center;
    justify-content: space-between;
}

.logo img {
    width: 150px; /* Adjust logo size */
}

nav ul {
    list-style: none;
    display: flex;
    gap: 30px;
}

nav ul li a {
    text-decoration: none;
    color: #ffffff;
    font-weight: 500;
    transition: color 0.3s;
}

nav ul li a:hover {
    color: #00FF99;
}

/* Hero Section - Improved with Green Gradient */
.hero {
    height: 100vh;
    background: linear-gradient(135deg, #00C366, #008F55); /* Creova Green Gradient */
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
}

.hero .container {
    width: 80%;
    margin: auto;
}

.hero h1 {
    font-size: 3.5rem;
    font-weight: 700;
    margin-bottom: 10px;
}

.hero p {
    font-size: 1.4rem;
    color: #E0E0E0;
    max-width: 600px;
    margin: auto;
}

/* Buttons */
.btn-primary {
    background: #00FF99;
    color: #0D0D0D;
    padding: 14px 28px;
    border: none;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    border-radius: 6px;
    transition: 0.3s;
}

.btn-primary:hover {
    background: #00C366;
}

/* Features Section */
.features {
    display: flex;
    justify-content: space-around;
    padding: 50px 0;
    text-align: center;
    background-color: #141414;
}

.feature {
    width: 30%;
}

.feature h3 {
    color: #00FF99;
    font-size: 1.8rem;
}

/* Footer */
.footer {
    background: #141414;
    padding: 20px 0;
    text-align: center;
}
